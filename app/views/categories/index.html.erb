<h1>All Categories</h1>
<ul>
  <% @categories.each do |category| %>
    <li><%= link_to category.name, category_path(category) %></li>
  <% end %>
</ul>
<%= link_to "Add Category", new_category_path, class: "btn btn-primary" %>

<div class="container">
  <h1>All Categories</h1>
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-4">
        <div class="card">
          <img src="https://via.placeholder.com/150" class="card-img-top" alt="category image">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
